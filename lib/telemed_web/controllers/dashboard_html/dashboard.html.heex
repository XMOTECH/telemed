    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Today's Appointments -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Rendez-vous Aujourd'hui</h2>
        <%= if Enum.empty?(@dashboard.today_appointments) do %>
