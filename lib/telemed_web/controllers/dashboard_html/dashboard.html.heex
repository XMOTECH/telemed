    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- System Health -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">État du Système</h2>
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Base de données</span>
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
              <%= @dashboard.system_health.database_status %>
            </span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Serveur</span>
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
              <%= @dashboard.system_health.server_uptime %>
            </span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Sessions actives</span>
            <span class="font-medium text-gray-900"><%= @dashboard.system_health.active_sessions %></span>
          </div>
        </div>
      </div>

      <!-- Recent Users -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Utilisateurs Récents</h2>
        <%= if Enum.empty?(@dashboard.recent_users) do %>
          <p class="text-gray-500">Aucun utilisateur</p>
        <% else %>
          <div class="space-y-3">
            <%= for user <- @dashboard.recent_users do %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                <div>
                  <p class="font-medium text-gray-900"><%= user.email %></p>
                  <p class="text-sm text-gray-500 capitalize"><%= user.role %></p>
                </div>
                <span class={"px-3 py-1 rounded-full text-xs font-medium #{if user.confirmed_at, do: "bg-green-100 text-green-800", else: "bg-yellow-100 text-yellow-800"}"}>
                  <%= if user.confirmed_at, do: "Confirmé", else: "En attente" %>
                </span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
