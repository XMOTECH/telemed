<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-5xl mx-auto px-4">
    <!-- Header -->
    <div class="mb-8">
      <.link navigate={~p"/medical_records"} class="inline-flex items-center text-gray-600 hover:text-gray-900 mb-4">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Retour aux dossiers
      </.link>
      
      <h1 class="text-3xl font-bold text-gray-900 flex items-center">
        <span class="text-4xl mr-3">📋</span>
        Nouveau Dossier Médical
      </h1>
      <p class="text-gray-600 mt-2">Créez un dossier médical structuré avec le format SOAP</p>
    </div>

    <!-- Formulaire -->
    <.form :let={f} for={@changeset} action={~p"/medical_records"} method="post">
      <!-- Affichage des erreurs globales -->
      <%= if @changeset.action && length(@changeset.errors) > 0 do %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-red-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div>
              <h3 class="text-red-800 font-semibold">Erreur lors de la création</h3>
              <ul class="mt-2 text-red-700 text-sm list-disc list-inside">
                <%= for {field, {msg, _opts}} <- @changeset.errors do %>
                  <li><strong><%= field %></strong>: <%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      
      <!-- Informations Patient -->
      <div class="bg-white rounded-lg shadow-sm border p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Informations Patient
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <.input field={f[:nom]} type="text" label="Nom du patient" placeholder="Ex: Jean Dupont" required />
          <.input field={f[:age]} type="number" label="Âge" placeholder="Ex: 45" />
        </div>
      </div>

      <!-- SOAP (Principal) -->
      <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg shadow-sm border border-blue-200 p-6 mb-6">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 flex items-center">
              <span class="text-3xl mr-3">🩺</span>
              Structure SOAP
            </h2>
            <p class="text-gray-600 mt-1">Format médical standardisé</p>
          </div>
          <div class="bg-white rounded-lg p-3 shadow-sm">
            <p class="text-sm font-semibold text-blue-600">Format Professionnel</p>
          </div>
        </div>

        <div class="space-y-6">
          <!-- S - Subjective -->
          <div class="bg-white rounded-lg p-5 border-l-4 border-blue-500">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center font-bold text-blue-600">
                S
              </div>
              <div class="flex-1">
                <label for="medical_record_soap_subjective" class="block text-sm font-semibold text-gray-900 mb-2">
                  Subjective - Symptômes rapportés par le patient
                </label>
                <textarea
                  name="medical_record[soap_subjective]"
                  id="medical_record_soap_subjective"
                  rows="3"
                  class="block w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="Ex: Fièvre depuis 3 jours (38.5°C), toux sèche, fatigue généralisée..."
                ></textarea>
                <p class="mt-1 text-xs text-gray-500">💡 Ce que le patient vous dit ressentir</p>
              </div>
            </div>
          </div>

          <!-- O - Objective -->
          <div class="bg-white rounded-lg p-5 border-l-4 border-green-500">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-full flex items-center justify-center font-bold text-green-600">
                O
              </div>
              <div class="flex-1">
                <label for="medical_record_soap_objective" class="block text-sm font-semibold text-gray-900 mb-2">
                  Objective - Examens et observations
                </label>
                <textarea
                  name="medical_record[soap_objective]"
                  id="medical_record_soap_objective"
                  rows="3"
                  class="block w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-transparent"
                  placeholder="Ex: T°38.5°C, FC 85/min, Auscultation pulmonaire normale..."
                ></textarea>
                <p class="mt-1 text-xs text-gray-500">🔬 Vos observations médicales et résultats d'examens</p>
              </div>
            </div>
          </div>

          <!-- A - Assessment -->
          <div class="bg-white rounded-lg p-5 border-l-4 border-purple-500">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center font-bold text-purple-600">
                A
              </div>
              <div class="flex-1">
                <label for="medical_record_soap_assessment" class="block text-sm font-semibold text-gray-900 mb-2">
                  Assessment - Diagnostic et évaluation
                </label>
                <textarea
                  name="medical_record[soap_assessment]"
                  id="medical_record_soap_assessment"
                  rows="3"
                  class="block w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                  placeholder="Ex: Probable infection virale des voies respiratoires supérieures..."
                ></textarea>
                <p class="mt-1 text-xs text-gray-500">🎯 Votre diagnostic et évaluation clinique</p>
              </div>
            </div>
          </div>

          <!-- P - Plan -->
          <div class="bg-white rounded-lg p-5 border-l-4 border-yellow-500">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center font-bold text-yellow-600">
                P
              </div>
              <div class="flex-1">
                <label for="medical_record_soap_plan" class="block text-sm font-semibold text-gray-900 mb-2">
                  Plan - Plan de traitement et suivi
                </label>
                <textarea
                  name="medical_record[soap_plan]"
                  id="medical_record_soap_plan"
                  rows="3"
                  class="block w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                  placeholder="Ex: Paracétamol 1g 3x/jour, repos, réévaluation dans 3 jours..."
                ></textarea>
                <p class="mt-1 text-xs text-gray-500">📝 Traitement prescrit et plan de suivi</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Metadata -->
      <div class="bg-white rounded-lg shadow-sm border p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">⚙️ Informations Complémentaires</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="medical_record_consultation_type" class="block text-sm font-medium text-gray-700 mb-2">
              Type de consultation
            </label>
            <select
              name="medical_record[consultation_type]"
              id="medical_record_consultation_type"
              class="block w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="consultation">🩺 Consultation</option>
              <option value="exam">💉 Examen</option>
              <option value="treatment">💊 Traitement</option>
              <option value="follow_up">🔄 Suivi</option>
              <option value="report">📋 Rapport</option>
            </select>
          </div>

          <div>
            <label for="medical_record_priority" class="block text-sm font-medium text-gray-700 mb-2">
              Priorité
            </label>
            <select
              name="medical_record[priority]"
              id="medical_record_priority"
              class="block w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="normal">⚪ Normal</option>
              <option value="high">🟠 Élevée</option>
              <option value="urgent">🔴 Urgent</option>
              <option value="low">⚫ Faible</option>
            </select>
          </div>

          <.input field={f[:specialty]} type="text" label="Spécialité" placeholder="Ex: Cardiologie..." />
          <.input field={f[:duration_minutes]} type="number" label="Durée (minutes)" placeholder="30" />

          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Tags 
              <span class="text-gray-500 font-normal">(séparés par des virgules)</span>
            </label>
            <input
              type="text"
              name="tags_input"
              id="tags_input"
              class="block w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Ex: fièvre, infection, virale"
            />
            <p class="mt-1 text-xs text-gray-500">🏷️ Ajoutez des tags pour faciliter la recherche</p>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center justify-between bg-white rounded-lg shadow-sm border p-6">
        <.link navigate={~p"/medical_records"} class="text-gray-600 hover:text-gray-900 font-medium">
          Annuler
        </.link>

        <button
          type="submit"
          class="inline-flex items-center px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-all shadow-lg hover:shadow-xl font-semibold"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Créer le Dossier
        </button>
      </div>
    </.form>
  </div>
</div>

<script>
  document.querySelector('form').addEventListener('submit', function(e) {
    const tagsInput = document.getElementById('tags_input');
    if (tagsInput && tagsInput.value) {
      const tags = tagsInput.value.split(',').map(tag => tag.trim()).filter(tag => tag);
      
      const tagsField = document.createElement('input');
      tagsField.type = 'hidden';
      tagsField.name = 'medical_record[tags][]';
      tagsField.value = JSON.stringify(tags);
      this.appendChild(tagsField);
    }
  });
</script>
