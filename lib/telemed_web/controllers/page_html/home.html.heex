<div class="min-h-screen">
  <!-- Landing Page Header (for non-authenticated users) -->
  <%= if !assigns[:current_user] do %>
    <header class="absolute top-0 left-0 right-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2">
            <div class="bg-white rounded-lg p-2">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <span class="text-2xl font-bold text-white">Télémédecine</span>
          </div>
          
          <div class="flex items-center space-x-3">
            <a href="/users/log_in" class="px-6 py-2.5 text-white font-semibold hover:bg-white hover:bg-opacity-10 rounded-lg transition-all">
              Connexion
            </a>
            <a href="/users/register" class="px-6 py-2.5 bg-white text-blue-600 font-bold rounded-lg hover:bg-blue-50 transition-all shadow-lg">
              S'inscrire
            </a>
          </div>
        </div>
      </div>
    </header>
  <% end %>

  <!-- Hero Section -->
